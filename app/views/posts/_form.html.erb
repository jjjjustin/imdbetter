<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for([current_user, @post], multipart:true) do |f| %>
      <%= f.input :url %>
      <%= f.input :description %>
      <%= f.input :poster_image %>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>


