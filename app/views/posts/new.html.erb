<h1>NEW POST</h1>


<%= simple_form_for @post, :url => posts_path, :html => { :multipart => true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :url %>
    <%= f.input :poster_image %>

  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

